<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="@color/cast_expanded_controller_background_color"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".50"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNombreEN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre (inglés):"
            android:textColor="@color/cast_expanded_controller_progress_text_color" />

        <TextView
            android:id="@+id/tvNombreES"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre (castellano):"
            android:textColor="@color/cast_expanded_controller_progress_text_color" />

        <TextView
            android:id="@+id/tvClave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clave:"
            android:textColor="@color/cast_expanded_controller_progress_text_color" />

        <TextView
            android:id="@+id/tvCapital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Capital:"
            android:textColor="@color/cast_expanded_controller_progress_text_color" />

        <TextView
            android:id="@+id/tvContinente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continente:"
            android:textColor="@color/cast_expanded_controller_progress_text_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".50"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPoblacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Población:"
            android:textColor="@color/cast_expanded_controller_progress_text_color" />

        <TextView
            android:id="@+id/tvLatitud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Latitud:"
            android:textColor="@color/cast_expanded_controller_progress_text_color" />

        <TextView
            android:id="@+id/tvLongitud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Longitud:"
            android:textColor="@color/cast_expanded_controller_progress_text_color" />

        <TextView
            android:id="@+id/tvPaisesFronterizos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Países fronterizos:"
            android:textColor="@color/cast_expanded_controller_progress_text_color" />
    </LinearLayout>
</LinearLayout>
